@model ERP.MVC.Application.DTOs.CompanyDto

@{
    ViewData["Title"] = Model.Id == null ? "Create Company" : "Update Company";
}

<div class="row">
    <ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
        <li class="breadcrumb-item">
            <a href="#">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M5 12l-2 0l9 -9l9 9l-2 0" /><path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" /><path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" /></svg>
            </a>
        </li>
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Company Profile</a></li>
        <li class="breadcrumb-item active" aria-current="page"><a href="#">Copmany View</a></li>
        <li class="breadcrumb-item active" aria-current="page">
            <a href="#">@((Model.Id == null) ? "Create Company" : "Update Company")</a>
        </li>
    </ol>
</div>
<div class="row">&nbsp;</div>
<!-- Display Validation Summary -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <!-- Close button -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row row-cards">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="@(Model.Id == null ? "CompanyView" : "Edit")" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div class="row row-cards">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">Company Name</label>
                                <input asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                                <span asp-validation-for="CompanyName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row row-cards">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Mobile No.</label>
                                <input id="MobileNo" type="text" asp-for="MobileNo" class="form-control" data-mask="(000) 0000-0000" data-mask-visible="true" placeholder="(00) 0000-0000" autocomplete="off" />
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Optional Mobile No.</label>
                                <input id="OptionalMobileNo" type="text" asp-for="OptionalMobileNo" class="form-control" data-mask="(000) 0000-0000" data-mask-visible="true" placeholder="(00) 0000-0000" autocomplete="off" />
                                <span asp-validation-for="OptionalMobileNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Telephone No.</label>
                                <input id="TelephoneNo" type="text" asp-for="TelephoneNo" class="form-control" data-mask="(00) 0000-0000" data-mask-visible="true" placeholder="(00) 0000-0000" autocomplete="off" />
                                <span asp-validation-for="TelephoneNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row row-cards">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile" class="form-label">Company Logo</label>
                        <input asp-for="ImageFile" type="file" class="form-control" id="ImageFile" accept="image/*" onchange="previewImage()" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        <div class="mt-3">
                            <img id="imagePreview" src="@Url.Content("~/uploads/" + Model.ImageURL)" alt="Image Preview" class="img-thumbnail" style="@(string.IsNullOrEmpty(Model.ImageURL) ? "display:none;" : "display:block;") max-width: 200px; max-height: 200px;" />
                        </div>
                        <div id="fileName" class="mt-2">
                            @(!string.IsNullOrEmpty(Model.ImageURL) ? (Model.ImageURL) : "No file chosen")
                        </div>
                    </div>
                    <div class="row row-cards">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <div class="form-label"></div>
                                <label class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <span class="form-check-label">Active</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row row-cards">
                        <div class="col-md-12" style="text-align:right">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-action="CompanyList" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function previewImage() {
        const fileInput = document.getElementById("ImageFile");
        const preview = document.getElementById("imagePreview");
        const fileNameDisplay = document.getElementById("fileName");
        const file = fileInput.files[0];

        if (file) {
            if (file.size > 500 * 1024) { // 500 KB limit
                alert("File size must not exceed 500 KB");
                fileInput.value = ""; // Reset the input
                preview.style.display = "none";
                fileNameDisplay.innerText = "No file chosen"; // Reset file name display
                return;
            }

            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = "block";
                fileNameDisplay.innerText = file.name; // Display file name
            };
            reader.readAsDataURL(file);
        } else {
            preview.style.display = "none";
            fileNameDisplay.innerText = "No file chosen"; // Reset file name display
        }
    }
    function cleanInput() {
        const mobileNo = document.getElementById("MobileNo");
        const optionalMobileNo = document.getElementById("OptionalMobileNo");
        const telephoneNo = document.getElementById("TelephoneNo");

        // Clean the inputs to keep only digits
        mobileNo.value = mobileNo.value.replace(/\D/g, '');
        optionalMobileNo.value = optionalMobileNo.value.replace(/\D/g, '');
        telephoneNo.value = telephoneNo.value.replace(/\D/g, '');
    }

    // Attach the cleanInput function to the form submission event
    document.querySelector("form").addEventListener("submit", cleanInput);
</script>
